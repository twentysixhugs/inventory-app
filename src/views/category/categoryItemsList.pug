extends layout 

block content 
  h1= title + category.name
  span= category.description
  div
    a(href=`/catalog/item/create?category=${category._id}`) Add new item
    div
      a(href='/') Home
      a(href='/catalog/category/all') All categories
  hr
  form.inline(method="post" action=`./${category._id}/delete`)
    button.category-delete(type="submit") Delete category
  a.update(href=`/catalog/category/${category._id}/update`) Update category
  hr

  if (categoryItems.length > 0)
    ul
      for item in categoryItems 
        li 
          a(href=item.url) #{item.name}
          span #{item.description}
          span $#{item.price} 
          span In stock: #{item.numberInStock} 
  else
    span There are no items
