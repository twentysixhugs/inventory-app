extends layout 

block content 
  h1= title + category.name
  div
    a(href=`/catalog/item/create?category=${category._id}`) Add new item
    a(href='/') Home
  form.inline(method="post" action=`./${category._id}/delete`)
    button(type="submit") Delete

  if (categoryItems.length > 0)
    ul
      for item in categoryItems 
        li 
          a(href=item.url) #{item.name}
          span #{item.description}
          span $#{item.price} 
          span In stock: #{item.numberInStock} 
  else
    span There are no items
